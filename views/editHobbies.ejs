<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Hobbies</title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>

<body class="bg-light">

    <div class="container mt-5" style="max-width: 600px;">

        <h1 class="text-center mb-4">Edit Your Hobbies</h1>

        <% if (error_message && error_message !== "") { %>
            <div class="alert alert-danger"><%= error_message %></div>
        <% } %>

        <!-- Current Hobbies -->
        <div class="card p-4 shadow-sm mb-4">

            <h4>Your Hobbies</h4>

            <% if (hobbies.length === 0) { %>

                <div class="alert alert-warning mt-3">
                    You haven't added any hobbies yet.
                </div>

            <% } else { %>

                <% hobbies.forEach((h) => { %>
                    <div class="d-flex justify-content-between align-items-center mb-2">

                        <span><%= h.hobby_name %></span>

                        <form 
                            action="/editHobbies/delete/<%= h.hobby_id %>" 
                            method="POST"
                        >
                            <button class="btn btn-sm btn-outline-danger">
                                Remove
                            </button>
                        </form>

                    </div>
                <% }) %>

            <% } %>

        </div>

        <!-- Add Hobby Form -->
        <div class="card p-4 shadow-sm">

            <h4>Add a Hobby</h4>

            <form action="/editHobbies/add" method="POST" class="mt-3">

                <input 
                    type="text" 
                    name="hobby_name"
                    placeholder="Enter hobby name"
                    class="form-control"
                >

                <button class="btn btn-primary w-100 mt-3">
                    Add Hobby
                </button>

            </form>

        </div>

        <a href="/" class="btn btn-secondary w-100 mt-4">Back to Home</a>

    </div>

</body>
</html>
