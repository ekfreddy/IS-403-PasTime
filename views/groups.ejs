<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Groups</title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>

<body class="bg-light">

    <div class="container mt-5" style="max-width: 750px;">

        <h1 class="text-center mb-4">Explore Groups</h1>

        <!-- ERROR MESSAGE -->
        <% if (error_message && error_message !== "") { %>
            <div class="alert alert-danger">
                <%= error_message %>
            </div>
        <% } %>

        <!-- Create Group Card -->
        <div class="card p-4 shadow-sm mb-4">
            <h4>Create a Group</h4>

            <form action="/groups/create" method="POST">

                <div class="mb-3">
                    <label class="form-label">Group Name</label>
                    <input type="text" class="form-control" name="group_name">
                </div>

                <div class="mb-3">
                    <label class="form-label">Group Description</label>
                    <textarea class="form-control" name="group_description" rows="3"></textarea>
                </div>

                <button class="btn btn-primary w-100">Create Group</button>
            </form>
        </div>

        <!-- GROUP LIST -->
        <% if (groups.length === 0) { %>

            <div class="alert alert-warning">No groups available.</div>

        <% } else { %>

            <% groups.forEach((g) => { %>
                <div class="card p-3 shadow-sm mb-4">
                    
                    <h4><%= g.group_name %></h4>
                    <p><%= g.group_description %></p>

                    <p class="text-muted">
                        Owner: <strong><%= g.owner_name %></strong>
                    </p>

                    <a href="/groups/<%= g.group_id %>" class="btn btn-primary w-100 mt-2">
                        View Group
                    </a>
                </div>
            <% }) %>

        <% } %>

        <a href="/" class="btn btn-secondary w-100 mt-4">Back to Home</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
