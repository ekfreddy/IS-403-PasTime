<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PasTime | Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>

<body class="bg-light">

    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">

            <a class="navbar-brand fw-bold text-primary" href="/">PasTime</a>

            <!-- Search Bar -->
            <form action="/search/results" method="GET" class="d-flex mx-auto" style="width: 40%;">
                <input 
                    class="form-control me-2 rounded-pill px-3"
                    type="search"
                    name="query"
                    placeholder="Search posts, users, or groups..."
                    aria-label="Search"
                    required
                >
                <button class="btn btn-outline-primary rounded-pill px-4" type="submit">
                    Search
                </button>
            </form>

            <div>
                <a href="/viewProfile" class="btn btn-outline-primary me-2">Profile</a>
                <a href="/logout" class="btn btn-primary">Log Out</a>
            </div>
        </div>
    </nav>

    <!-- Secondary Navbar -->
    <nav class="navbar navbar-expand bg-light border-bottom shadow-sm">
        <div class="container justify-content-center">
            <ul class="navbar-nav">

                <li class="nav-item mx-3">
                    <a class="nav-link fw-semibold text-primary" href="/feed">Feed</a>
                </li>

                <li class="nav-item mx-3">
                    <a class="nav-link fw-semibold text-primary" href="/groups">Groups</a>
                </li>

                <li class="nav-item mx-3">
                    <a class="nav-link fw-semibold text-primary" href="/friends">Friends</a>
                </li>

                <li class="nav-item mx-3">
                    <a class="nav-link fw-semibold text-primary" href="/saved">Saved</a>
                </li>

                <li class="nav-item mx-3">
                    <a class="nav-link fw-semibold text-primary" href="/makePost">Post</a>
                </li>

            </ul>
        </div>
    </nav>


    <!-- Welcome Area -->
    <section class="py-5 text-center bg-white border-bottom">
        <div class="container">
            <h1 class="display-5 fw-bold">Welcome back!</h1>
            <p class="lead text-muted">Discover new hobbies, connect with others, and share what you love doing.</p>
        </div>
    </section>

    <!-- Recent Posts Section -->
    <section class="container py-5">
        <h3 class="mb-4">Recent Posts</h3>

        <% if (posts && posts.length > 0) { %>
            <div class="row g-4">

                <% posts.forEach(post => { %>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">

                                <!-- Caption -->
                                <h5 class="card-title mb-1"><%= post.caption %></h5>

                                <!-- City / State -->
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-geo-alt"></i> <%= post.city %>, <%= post.state %>
                                </p>

                                <!-- Content -->
                                <p class="card-text text-muted" style="min-height: 60px;">
                                    <%= post.content.length > 120 
                                        ? post.content.substring(0, 120) + "..." 
                                        : post.content 
                                    %>
                                </p>

                                <a href="/posts/<%= post.post_id %>" class="btn btn-outline-primary btn-sm">
                                    View
                                </a>

                            </div>
                        </div>
                    </div>
                <% }) %>

            </div>
        <% } else { %>

            <!-- No posts available -->
            <div class="text-center text-muted">
                <p>No recent posts to show.</p>
            </div>

        <% } %>

        <div class="text-center mt-5">
            <a href="/feed" class="btn btn-primary px-4 py-2 rounded-pill">See Posts Near You</a>
        </div>

    </section>

    <!-- Footer -->
    <footer class="bg-light text-center py-4 mt-auto border-top">
        <small class="text-muted">&copy; 2025 PasTime. Built for people who love what they do.</small>
    </footer>

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</body>
</html>
