<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>

<body class="bg-light">

    <div class="container mt-5" style="max-width: 800px;">

        <h1 class="text-center mb-4">
            Results for "<%= search_query %>"
        </h1>

        <% if (error_message && error_message !== "") { %>
            <div class="alert alert-danger"><%= error_message %></div>
        <% } %>

        <!-- POSTS -->
        <h3 class="mt-4 mb-3">Posts</h3>

        <% if (posts.length === 0) { %>
            <div class="alert alert-warning">No matching posts.</div>
        <% } else { %>
            <% posts.forEach((p) => { %>
                <div class="card p-3 shadow-sm mb-3">
                    <h4><%= p.caption %></h4>
                    <p><%= p.content %></p>

                    <p class="text-muted mb-1">
                        Posted by <strong><%= p.username %></strong>
                    </p>

                    <% if (p.group_name) { %>
                        <p class="text-info">Group: <%= p.group_name %></p>
                    <% } %>

                    <a href="/posts/<%= p.post_id %>" class="btn btn-primary w-100 mt-2">
                        View Post
                    </a>
                </div>
            <% }) %>
        <% } %>

        <!-- USERS -->
        <h3 class="mt-5 mb-3">Users</h3>

        <% if (users.length === 0) { %>
            <div class="alert alert-warning">No matching users.</div>
        <% } else { %>
            <% users.forEach((u) => { %>
                <div class="card p-3 shadow-sm mb-3">
                    <h4><%= u.username %></h4>
                    <p class="text-muted">
                        <%= u.city %>, <%= u.state %>
                    </p>

                    <a href="/profile/<%= u.user_id %>" class="btn btn-secondary w-100 mt-2">
                        View Profile
                    </a>
                    <a href="/userPosts/<%= u.user_id %>" class="btn btn-secondary w-100 mt-2">
                        View Posts
                    </a>
                </div>
            <% }) %>
        <% } %>

        <!-- GROUPS -->
        <h3 class="mt-5 mb-3">Groups</h3>

        <% if (groups.length === 0) { %>
            <div class="alert alert-warning">No matching groups.</div>
        <% } else { %>
            <% groups.forEach((g) => { %>
                <div class="card p-3 shadow-sm mb-3">
                    <h4><%= g.group_name %></h4>
                    <p><%= g.group_description %></p>

                    <a href="/groups/<%= g.group_id %>" class="btn btn-dark w-100 mt-2">
                        View Group
                    </a>
                </div>
            <% }) %>
        <% } %>

        <a href="/" class="btn btn-secondary w-100 mt-4">Back to Search</a>

    </div>

</body>
</html>
