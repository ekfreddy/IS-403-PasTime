<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user ? user.username : "User Posts" %></title>

    <link 
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
</head>

<body class="bg-light">

    <div class="container mt-5" style="max-width: 700px;">

        <% if (user) { %>
            <h1 class="text-center mb-4">
                Posts by <%= user.username %>
            </h1>

            <p class="text-center text-muted mb-4">
                <%= user.city %>, <%= user.state %>
            </p>
        <% } %>

        <% if (error_message && error_message !== "") { %>
            <div class="alert alert-danger"><%= error_message %></div>
        <% } %>

        <% if (posts.length === 0) { %>

            <div class="alert alert-warning">
                This user has not created any posts yet.
            </div>

        <% } else { %>

            <% posts.forEach((p) => { %>
                <div class="card p-3 shadow-sm mb-4">

                    <h4><%= p.caption %></h4>

                    <p>
                        <%= p.content %>
                    </p>

                    <p class="text-muted mb-1">
                        Posted on <%= new Date(p.created_at).toLocaleString() %>
                    </p>

                    <% if (p.group_name) { %>
                        <p class="text-info">
                            Group: <%= p.group_name %>
                        </p>
                    <% } %>

                    <a 
                        href="/posts/<%= p.post_id %>" 
                        class="btn btn-primary w-100 mt-2"
                    >
                        View Post
                    </a>
                    <% if (currentUserID == user.user_id) { %>
                        <!-- Delete button for the owner only -->
                        <form action="/posts/<%= p.post_id %>/delete" method="POST"
                            onsubmit="return confirm('Are you sure you want to delete this post?');">
                            <button class="btn btn-danger btn-sm w-100 mt-2">Delete Post</button>
                        </form>
                    <% } %>

                </div>
            <% }) %>

        <% } %>

        <a href="/" class="btn btn-secondary w-100 mt-4">
            Back to Home
        </a>

    </div>

    <script 
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js">
    </script>
</body>
</html>
